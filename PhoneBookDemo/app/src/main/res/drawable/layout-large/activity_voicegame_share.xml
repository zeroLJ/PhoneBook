<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_voicegame_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/voicegame_sharebackground"
    tools:context="com.voibook.voicebook.main.more.voicegame.VoicegameShareActivity">
    <ImageView
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/voicegame_share_back"
        android:id="@+id/voicegame_share_back"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/voicegame_share"
        android:id="@+id/voicegame_share"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">
                <com.voibook.voicebook.sidebar.account.MLRoundedImageView
                    android:id="@+id/activity_voicegame_share_head_iv"
                    android:layout_marginTop="15dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/voicegame_share_headicon_word" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/voicegame_share_armyname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="陆军"
                        android:textSize="36dp" />

                    <TextView
                        android:id="@+id/voicegame_share_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="师长"
                        android:textColor="@color/white"
                        android:textSize="36dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/voicegame_share_playername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:text="某某人"
                        android:maxLength="7"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/gray1"
                        android:textSize="24sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在音书"
                        android:textColor="@color/gray1"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/voicegame_share_gamename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="万词斩"
                        android:textColor="@color/gray1"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="第  "
                        android:textColor="@color/gray1"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/voicegame_share_round"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="27sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  战场中"
                        android:textColor="@color/gray1"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获得了   "
                        android:textColor="@color/gray1"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/voicegame_share_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/white"
                        android:textSize="27sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   分！"
                        android:textColor="@color/gray1"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

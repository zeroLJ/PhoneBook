<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/bg_relativelayout">

    <!--头像-->
    <ImageView
        android:id="@+id/item_chatmanager_friendlist_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/avatar_default" />

    <!--帧布局-->
    <FrameLayout
        android:id="@+id/item_chatmanager_friendlist_framelayout"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp">

        <!--邀请加入-->
        <LinearLayout
            android:id="@+id/item_chatmanager_friendlist_invite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@drawable/chatmanager_invite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:text="邀请加入"
                android:textColor="#61C57B"
                android:textSize="11sp" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/item_chatmanager_friendlist_progressbar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!--移出群聊-->
        <LinearLayout
            android:id="@+id/item_chatmanager_friendlist_removed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@drawable/chatmanager_removed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:text="移出群聊"
                android:textColor="?attr/colorPrimary"
                android:textSize="11sp" />


        </LinearLayout>

        <!--离线-->
        <LinearLayout
            android:id="@+id/item_chatmanager_friendlist_offline"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/chatmanager_offline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:text="离线"
                android:textColor="#BBBBBB"
                android:textSize="11sp" />


        </LinearLayout>

        <!--邀请注册-->
        <Button
            android:id="@+id/item_chatmanager_friendlist_register"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/button_shape_stroke"
            android:gravity="center"
            android:text="邀请注册"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:visibility="gone" />


        <!--离线-->
        <LinearLayout
            android:id="@+id/item_chatmanager_friendlist_groupowner"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_groupowner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:text="群主"
                android:textColor="#f88726"
                android:textSize="11sp" />


        </LinearLayout>


    </FrameLayout>

    <!--昵称-->
    <TextView
        android:id="@+id/item_chatmanager_friendlist_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toEndOf="@id/item_chatmanager_friendlist_avatar"
        android:layout_toLeftOf="@id/item_chatmanager_friendlist_framelayout"
        android:layout_toRightOf="@id/item_chatmanager_friendlist_avatar"
        android:layout_toStartOf="@id/item_chatmanager_friendlist_framelayout"
        android:text="好友昵称"
        android:textColor="#3A3A3A"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#DDDDDD" />

</RelativeLayout>
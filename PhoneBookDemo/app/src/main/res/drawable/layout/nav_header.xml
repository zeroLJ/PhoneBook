<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <RelativeLayout
        android:id="@+id/nav_header_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/nav_header_account_portrait"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:src="@drawable/avatar_default_1" />

        <ImageView
            android:id="@+id/nav_header_account_vip"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@id/nav_header_account_portrait"
            android:layout_alignStart="@id/nav_header_account_portrait"
            android:layout_alignTop="@id/nav_header_account_portrait"
            android:src="@drawable/vip_none" />


        <TextView
            android:id="@+id/nav_header_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav_header_account_portrait"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="@dimen/space_10"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxLength="8"
            android:text="音书新用户"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="@dimen/textSize_24" />

        <ImageView
            android:id="@+id/nav_header_account_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/nav_header_account_name"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/nav_header_account_name"
            android:layout_toRightOf="@id/nav_header_account_name"
            android:src="@drawable/icon_nav_header_edit" />

        <TextView
            android:id="@+id/nav_header_account_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav_header_account_name"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_4"
            android:gravity="center"
            android:lines="1"
            android:maxLength="11"
            android:text="12345678910" />

    </RelativeLayout>

    <TextView
        android:id="@+id/nav_header_signin"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_header_account"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_sign"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="6dp"
        android:text="签 到"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSize_12"
        android:visibility="visible" />

    <ScrollView
        android:id="@+id/nav_header_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nav_header_signin"
        android:background="@color/colorNavBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:background="@color/colorNavBackground"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/item_navigation_coin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/nav_item_background">

                <ImageView
                    android:id="@+id/item_navigation_coin_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/nav_item_coin" />

                <TextView
                    android:id="@+id/item_navigation_coin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="32dp"
                    android:layout_toEndOf="@id/item_navigation_coin_image"
                    android:layout_toRightOf="@id/item_navigation_coin_image"
                    android:gravity="center_vertical"
                    android:text="我的金币"
                    android:textColor="@color/colorNavMenuTextColor"
                    android:textSize="@dimen/textSize_16" />

                <TextView
                    android:id="@+id/item_navigation_coin_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginStart="18dp"
                    android:layout_toEndOf="@id/item_navigation_coin_text"
                    android:layout_toRightOf="@id/item_navigation_coin_text"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="获取中..."
                    android:textColor="@color/colorNavMenuTextColor"
                    android:textSize="@dimen/textSize_16"
                    android:visibility="visible" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/item_navigation_help"
                android:layout_width="match_parent"
                android:background="@drawable/nav_item_background"
                android:layout_height="48dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/nav_menu_help" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="32dp"
                    android:gravity="center_vertical"
                    android:text="使用帮助"
                    android:textColor="@color/colorNavMenuTextColor"
                    android:textSize="@dimen/textSize_16" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_navigation_recommend"
                android:layout_width="match_parent"
                android:background="@drawable/nav_item_background"
                android:layout_height="48dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/nav_menu_recommend" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="32dp"
                    android:gravity="center_vertical"
                    android:text="推荐给朋友"
                    android:textColor="@color/colorNavMenuTextColor"
                    android:textSize="@dimen/textSize_16" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_navigation_feedback"
                android:layout_width="match_parent"
                android:background="@drawable/nav_item_background"
                android:layout_height="48dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/nav_menu_feedback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="32dp"
                    android:gravity="center_vertical"
                    android:text="意见反馈"
                    android:textColor="@color/colorNavMenuTextColor"
                    android:textSize="@dimen/textSize_16" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_navigation_questionaire"
                android:layout_width="match_parent"
                android:background="@drawable/nav_item_background"
                android:layout_height="48dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/nav_menu_questionaire" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="32dp"
                    android:gravity="center_vertical"
                    android:text="问卷调查"
                    android:textColor="@color/colorNavMenuTextColor"
                    android:textSize="@dimen/textSize_16" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_navigation_about"
                android:background="@drawable/nav_item_background"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/nav_menu_about" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="32dp"
                    android:gravity="center_vertical"
                    android:text="关于音书"
                    android:textColor="@color/colorNavMenuTextColor"
                    android:textSize="@dimen/textSize_16" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_call_on"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="com.voibook.voicebook.main.caption.call.CallOnActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:contentInsetStart="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13711330352"
                        android:layout_gravity="center"
                        android:id="@+id/num_tv_call_on"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正在呼叫"
                        android:layout_gravity="center"
                        android:id="@+id/status_tv_call_on"
                        android:textSize="20dp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_below="@id/toolbar_common"
            android:layout_above="@+id/layout"
            android:background="@color/caption_background_color"
            android:id="@+id/recyclerView_call_on"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:id="@+id/recording_layout_call_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:visibility="visible">
                <Button
                    android:scaleType="fitCenter"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/space_64"
                    android:layout_height="@dimen/space_64"
                    android:background="@drawable/ic_volume_w0"
                    android:visibility="invisible"/>

                <ImageButton
                    android:background="@color/colorTransparent"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/space_40"
                    android:layout_height="@dimen/space_40"
                    android:layout_marginRight="@dimen/space_20"
                    android:id="@+id/changetokeyboard_ibt_call_on"
                    android:src="@drawable/caption_keyboard"/>

                <TextView
                    android:background="@color/colorTransparent"
                    android:scaleType="fitCenter"
                    android:id="@+id/show_common_sentence_list_tv_call_on"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:text="常用语"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/keyboard_layout_call_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorCaptionTextEditToolsBackground"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_8"
                android:paddingRight="@dimen/space_8"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/space_10"
                    android:id="@+id/isStore_layout_call_on"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_alignParentTop="true">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/isStore_iv_call_on"
                        android:src="@drawable/bottomsheet_camera"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="保存为常用语"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/msgSend_et_call_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/isStore_layout_call_on"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_toLeftOf="@+id/send_tv_call_on"
                    android:layout_toStartOf="@+id/send_tv_call_on"
                    android:background="@drawable/with_corners_bg"
                    android:hint="输入你想说的话"
                    android:maxLines="3"
                    android:paddingBottom="@dimen/space_5"
                    android:paddingEnd="@dimen/space_14"
                    android:paddingLeft="@dimen/space_14"
                    android:paddingRight="@dimen/space_14"
                    android:paddingStart="@dimen/space_14"
                    android:paddingTop="@dimen/space_5"
                    android:textSize="@dimen/textSize_16" />


                <TextView
                    android:id="@+id/send_tv_call_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/isStore_layout_call_on"
                    android:background="@drawable/caption_send_btn_background"
                    android:paddingBottom="@dimen/space_5"
                    android:paddingEnd="@dimen/space_14"
                    android:paddingLeft="@dimen/space_14"
                    android:paddingRight="@dimen/space_14"
                    android:paddingStart="@dimen/space_14"
                    android:paddingTop="@dimen/space_5"
                    android:text="@string/str_back"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSize_16" />

            </RelativeLayout>
        </FrameLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/toolbar_common"
            android:layout_marginTop="30dp"
            android:id="@+id/hang_up_view1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/hang_up_view1"
            android:id="@+id/hang_up_view2"/>
        <ImageView
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"
            android:src="@drawable/ic_volume_w0"
            android:layout_toLeftOf="@+id/hang_up_view2"
            android:layout_above="@+id/hang_up_view2"
            android:id="@+id/hang_up_iv_activity_call_on"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/layout"
            android:layout_marginBottom="15dp"
            android:id="@+id/record_view1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/record_view1"
            android:id="@+id/record_view2"/>

        <Button
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/space_75"
            android:layout_height="@dimen/space_75"
            android:layout_below="@id/record_view2"
            android:background="@drawable/ic_volume_w0"
            android:id="@+id/recording_bt_call_on"/>
    </RelativeLayout>
</RelativeLayout>

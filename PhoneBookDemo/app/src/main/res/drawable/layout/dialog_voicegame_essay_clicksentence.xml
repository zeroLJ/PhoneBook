<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/gray1"
    android:orientation="vertical"
    >
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:paddingStart="0dp"
        android:clickable="false"
        android:progressDrawable="@drawable/seekbar"
        android:paddingEnd="0dp"
        android:thumb="@null"
        android:visibility="invisible"
        android:id="@+id/voicegame_seekbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:gravity="center">
            <GridView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:verticalSpacing="5dp"
                android:id="@+id/voicegame_essay_dialog_gridview">
            </GridView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/game_word_passbackground"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="1dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="播放"
                android:padding="8dp"
                android:textSize="20sp"
                android:layout_marginRight="1dp"
                android:background="@color/gray1"
                android:textColor="@color/blue"
                android:id="@+id/voicegame_essay_dialog_playVoice"
                android:layout_weight="1"/>
            <TextView
                android:layout_marginTop="1dp"
                android:padding="8dp"
                android:text="取消"
                android:background="@color/gray1"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:id="@+id/voicegame_essay_dialog_cancel"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

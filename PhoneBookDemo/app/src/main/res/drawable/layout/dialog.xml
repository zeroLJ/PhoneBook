<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="确定要移出成员？"
        android:paddingLeft="6dp"
        android:paddingStart="6dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="提示"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialog_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_text2"
        android:layout_centerHorizontal="true"
        android:text="1.暂时移出:请好友回避"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialog_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_text3"
        android:layout_centerHorizontal="true"
        android:text="2.永久移出:删除好友"
        android:textSize="16sp" />


    <Button
        android:id="@+id/dialog_temp"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/dialog_text4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_shape_white"
        android:paddingEnd="60dp"
        android:paddingStart="60dp"
        android:text="暂时移出"
        android:textColor="@color/blue" />


    <Button
        android:id="@+id/dialog_button_forever"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/dialog_temp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_shape_white"
        android:paddingEnd="60dp"
        android:paddingStart="60dp"
        android:text="永久移出"
        android:textColor="@android:color/holo_red_light" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/dialog_button_forever"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_shape_white"
        android:paddingEnd="60dp"
        android:paddingStart="60dp"
        android:text="取        消" />

</RelativeLayout>
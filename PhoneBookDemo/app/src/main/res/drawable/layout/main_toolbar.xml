<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:elevation="3dp"
    android:fitsSystemWindows="true"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/AppTheme.AppBarOverlay"
    app:contentInsetStartWithNavigation="0dp"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/toolbar_caption"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/toolbar_stub"
            android:layout_toStartOf="@+id/toolbar_stub"
            android:background="@color/colorTransparent"
            android:gravity="center"
            android:text="@string/toolbar_subtitles"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize_20" />

        <View
            android:id="@+id/toolbar_stub"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/toolbar_more"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/toolbar_stub"
            android:layout_toRightOf="@+id/toolbar_stub"
            android:background="@color/colorTransparent"
            android:gravity="center"
            android:text="@string/toolbar_more"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/textSize_16" />

        <View
            android:id="@+id/toolbar_tagLine"
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_alignRight="@id/toolbar_stub"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@color/colorWhite" />

    </RelativeLayout>

</android.support.v7.widget.Toolbar>

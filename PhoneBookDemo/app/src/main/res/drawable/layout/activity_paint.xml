<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- The Toolbar displayed at the top -->
        <include
            layout="@layout/toolbar_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorCommonBgGray">

            <com.voibook.voicebook.main.more.paint.MyPaintView
                android:layout_width="match_parent"
                android:layout_height="2500dp"
                android:id="@+id/paint_view"
                android:scrollbars="vertical"
                android:background="#FFCCCCCC"/>

            <ImageView
                android:layout_width="@dimen/space_55"
                android:layout_height="@dimen/space_55"
                android:scaleType="fitXY"
                android:layout_marginBottom="@dimen/space_20"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginStart="@dimen/space_5"
                android:id="@+id/paint_delete"
                android:src="@drawable/delete_paint_btn"/>

            <!--<android.support.design.widget.FloatingActionButton-->
            <!--android:layout_width="@dimen/space_45"-->
            <!--android:layout_height="@dimen/space_45"-->
            <!--android:src="@drawable/delete_paint_btn"-->
            <!--android:backgroundTint="@color/colorWhite"-->
            <!--android:scaleType="fitXY"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_marginBottom="@dimen/space_20"-->
            <!--android:layout_marginEnd="@dimen/space_20"-->
            <!--android:layout_marginRight="@dimen/space_20"-->
            <!--/>-->
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <!--标题栏-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/chatmanager_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/chatmanager_toolbar_back"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:paddingEnd="2dp"
                android:paddingRight="2dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_back" />

                <TextView
                    android:id="@+id/chatmanager_toolbar_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:lines="1"
                    android:text="返回"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chatmanager_toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="好友列表"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />


            </RelativeLayout>

            <View
                android:layout_width="80dp"
                android:layout_height="match_parent" />


        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <!--解散群聊-->
    <Button
        android:id="@+id/chatmanager_dissolve"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:layout_below="@id/chatmanager_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/chatmanager_button_dissolve_selector"
        android:gravity="center"
        android:text="解散群聊"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp" />

    <!--添加新好友-->
    <RelativeLayout
        android:id="@+id/chatmanager_add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/chatmanager_dissolve"
        android:layout_marginBottom="12dp"
        android:background="@drawable/item_click_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chatmanager_add_imageview"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:padding="6dp"
            android:src="@drawable/icon_chatmanager_search" />

        <Button
            android:id="@+id/chatmanager_add_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_shape"
            android:text="搜索"
            android:textColor="@android:color/white" />

        <AutoCompleteTextView
            android:id="@+id/chatmanager_add_auto_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dropDownHeight="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/chatmanager_add_imageview"
            android:layout_toLeftOf="@id/chatmanager_add_button"
            android:layout_toRightOf="@id/chatmanager_add_imageview"
            android:layout_toStartOf="@id/chatmanager_add_button"
            android:gravity="center"
            android:hint="输入手机号邀请聊天"
            android:inputType="number"
            android:maxLength="11"
            android:ellipsize="end"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#3A3A3A"
            android:textSize="16sp" />


    </RelativeLayout>

    <!--好友列表-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/chatmanager_friendlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chatmanager_add"
        android:background="@color/white" />


</RelativeLayout>
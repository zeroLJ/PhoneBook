<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_multiuser_identity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="为了给您提供最佳用户体验，请您选择一个最适合自己身份的描述：" />

    <RelativeLayout
        android:id="@+id/dialog_multiuser_identity_identity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/dialog_multiuser_identity_text">

        <Button
            android:id="@+id/dialog_multiuser_identity_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_multiuser_identity"
            android:text="健听人"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/dialog_multiuser_identity_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/dialog_multiuser_identity_button_1"
            android:layout_toRightOf="@id/dialog_multiuser_identity_button_1"
            android:background="@drawable/button_multiuser_identity"
            android:text="健听人"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/dialog_multiuser_identity_button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/dialog_multiuser_identity_button_2"
            android:layout_toRightOf="@id/dialog_multiuser_identity_button_2"
            android:background="@drawable/button_multiuser_identity"
            android:text="健听人"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/voicegame_top_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/voicegame_time_layout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:src="@drawable/resttime" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余时间"
                android:textColor="@color/name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/voicegame_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="m"
                android:textColor="@color/num"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/num"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/voicegame_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="s"
                android:textColor="@color/num"
                android:textSize="15sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/voicegame_share_back"
            android:id="@+id/voicegame_back"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/recognizer_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/voicegame_time_layout"
        android:layout_weight="2"
        android:text="等待开始"
        android:textColor="@color/num"
        android:textSize="20sp" />
</RelativeLayout>

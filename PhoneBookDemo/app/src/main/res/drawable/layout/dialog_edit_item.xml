<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_item_shape">

    <LinearLayout
        android:id="@+id/dialog_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <EditText
            android:id="@+id/edit_item"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/space_15"
            android:layout_marginEnd="@dimen/space_5"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginRight="@dimen/space_5"
            android:layout_marginStart="@dimen/space_5"
            android:layout_marginTop="@dimen/space_15"
            android:background="@null"
            android:singleLine="true"
            android:text="@string/ttl_text_1"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/textSize_14"
            android:maxLength="64"/>

        <ImageButton
            android:id="@+id/dialog_delete_btn"
            android:layout_width="@dimen/space_18"
            android:layout_height="@dimen/space_18"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:background="@drawable/iconmonstr_forbidden"
            android:layout_marginRight="@dimen/space_15"
            android:layout_marginEnd="@dimen/space_15"/>
    </LinearLayout>


    <TextView
        android:id="@+id/text_item"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/space_15"
        android:layout_marginEnd="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_marginRight="@dimen/space_5"
        android:layout_marginStart="@dimen/space_5"
        android:layout_marginTop="@dimen/space_15"
        android:background="@color/colorWhite"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/ttl_text_1"
        android:textColor="@color/colorDarkGray"
        android:textSize="@dimen/textSize_14" />

</LinearLayout>
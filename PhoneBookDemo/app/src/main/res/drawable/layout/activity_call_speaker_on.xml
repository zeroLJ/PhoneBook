<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_popup2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:keepScreenOn="true"
    tools:context="com.voibook.voicebook.main.caption.call.CallSpeakerOnActivity">
    <!--<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/toolbar_common"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--android:fitsSystemWindows="true"-->
        <!--android:minHeight="?attr/actionBarSize"-->
        <!--android:theme="@style/AppTheme.AppBarOverlay"-->
        <!--app:popupTheme="@style/AppTheme.PopupOverlay">-->
    <!--</android.support.v7.widget.Toolbar>-->
    <include
        layout="@layout/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--列表控件-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/caption_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/caption_recording_layout"
            android:background="@color/caption_background_color" />
        <RelativeLayout
            android:id="@+id/caption_recording_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite">
            <Button
                android:id="@+id/caption_recording_button"
                android:layout_width="@dimen/space_64"
                android:layout_height="@dimen/space_64"
                android:layout_centerInParent="true"
                android:background="@drawable/recording_off"
                android:shadowColor="#000000"
                android:textColor="#fff" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_call_result_tv"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_call_sound_tv"/>
</LinearLayout>

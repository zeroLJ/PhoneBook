<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/game_background"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <include layout="@layout/voicegame_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="10dp">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

            <Button
                android:id="@+id/voicegame_start"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@color/colorPrimary"
                android:text="开始战斗"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/voicegame_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="100dp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible"
                android:id="@+id/voicegame_word_layout">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/voicegame_round_layout"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="第"
                        android:textColor="@color/name"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/voicegame_round_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="1"
                        android:textColor="@color/num"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="局"
                        android:textColor="@color/name"
                        android:textSize="15sp" />
                </LinearLayout>
                <GridView
                    android:id="@+id/voicegame_word_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:horizontalSpacing="15dp"
                    android:numColumns="4"
                    android:verticalSpacing="15dp"></GridView>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mark_message_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:visibility="invisible">
            <include layout="@layout/voicegame_mark_message" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

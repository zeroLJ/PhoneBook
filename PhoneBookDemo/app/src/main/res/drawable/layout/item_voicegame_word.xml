<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/voicegame_item_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="66dp"
    android:background="@color/white">
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:paddingStart="0dp"
        android:clickable="false"
        android:progressDrawable="@drawable/seekbar"
        android:paddingEnd="0dp"
        android:thumb="@null"
        android:visibility="gone"
        android:id="@+id/voicegame_seekbar" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/voicegame_word_pronunciation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoText="true"
            android:gravity="center"
            android:textSize="13dp"
            android:text="读音"
            android:textColor="@color/game_word" />
        <TextView
            android:id="@+id/voicegame_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoText="true"
            android:gravity="center"
            android:textSize="15dp"
            android:text="词语"
            android:textColor="@color/game_word" />
    </LinearLayout>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/voicegame_word_playVoice"
        android:src="@drawable/voicegame_playvoice"
        />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iflytek_language_1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/textview_select_style"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="@string/language_1"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3E3E3E"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/iflytek_language_2"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="@drawable/textview_select_style"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="@string/language_2"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3E3E3E"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/iflytek_language_3"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="@drawable/textview_select_style"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="@string/language_3"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3E3E3E"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/iflytek_language_4"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="@drawable/textview_select_style"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="@string/language_4"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3E3E3E"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/iflytek_language_5"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="@drawable/textview_select_style"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="@string/language_5"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3E3E3E"
            android:scaleType="fitXY" />

    </LinearLayout>
</ScrollView>
